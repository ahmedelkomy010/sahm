############################################
#         إعدادات المشروع للإنتاج         #
#      نظام إدارة أوامر العمل - SAHM       #
############################################

# حالة التطبيق - مهم جداً للأمان
APP_NAME="SAHM Work Orders System"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=Asia/Riyadh
APP_URL=https://yourdomain.com

# إعدادات قاعدة البيانات - cPanel
# يجب تحديث هذه القيم حسب إعدادات cPanel
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_cpanel_database_name
DB_USERNAME=your_cpanel_db_username
DB_PASSWORD=your_cpanel_db_password

# إعدادات جلسات المستخدم
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# إعدادات التخزين المؤقت
CACHE_STORE=database
QUEUE_CONNECTION=database

# إعدادات البريد الإلكتروني (اختياري)
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# إعدادات الأمان
BCRYPT_ROUNDS=12

# إعدادات الملفات والتحميلات
FILESYSTEM_DISK=public
MAX_UPLOAD_SIZE=20480

# إعدادات الأداء
OCTANE_HTTPS=true

############################################
#            تعليمات مهمة                 #
############################################
# 1. غير APP_KEY بمفتاح جديد باستخدام: php artisan key:generate
# 2. حدث إعدادات قاعدة البيانات حسب cPanel
# 3. غير APP_URL لرابط موقعك الفعلي
# 4. احرص على حفظ هذا الملف كـ .env في المجلد الرئيسي
# 5. لا تشارك هذا الملف مع أحد - يحتوي على معلومات حساسة 